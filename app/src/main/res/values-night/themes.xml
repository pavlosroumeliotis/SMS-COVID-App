<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SMSCovid" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal_700</item>
        <item name="colorPrimaryVariant">@color/teal_200</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="colorAccent">@color/dark</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_700</item>
        <item name="colorSecondaryVariant">@color/dark_teal</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorAccent</item>
        <!-- Customize your theme here. -->
        <item name="button">@color/teal_200</item>
        <item name="codeText_non_selected">@color/white</item>
        <item name="codeText_selected">@color/white</item>
        <item name="codeCard_non_selected">@color/nonselected_dark</item>
        <item name="codeCard_selected">@color/teal_700</item>
        <item name="scrollbar">@color/teal_700</item>
    </style>
</resources>